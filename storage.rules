rules_version = '2';

// Firebase Storage Security Rules for PhotoQuest
service firebase.storage {
  match /b/{bucket}/o {
    // Quest photos - users can only upload to their own folder
    match /quest_photos/{userId}/{filename} {
      // Anyone can read photos (for community feed)
      allow read: if true;
      
      // Only authenticated users can write to their own folder
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // Max 10MB
                   && request.resource.contentType.matches('image/.*');  // Images only
      
      // Allow deletion only by owner
      allow delete: if request.auth != null 
                    && request.auth.uid == userId;
    }
  }
}
